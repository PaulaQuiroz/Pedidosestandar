{% set titulo = 'Administradores de Cadena' %}

{% extends 'plantilla.njk' %}

{% block content %}
<div class="card">
	<div class="card-content row">
		<h3 class="heading">Cadenas</h3>
		<div class="input-field col s12 m6">
			<select id="cadenas">
				<option value="" disabled selected>Seleccione&hellip;</option>
{% for cadena in cadenas %}
				<option value="{{ cadena.id }}">{{ cadena.nombre }}</option>
{% endfor %}
			</select>
			<label for="cadenas">Lista de cadenas</label>
		</div>
		<div class="input-field col s12 m6 hide" id="container-segmentos">
			<select id="segmentos">
				<option value="" disabled selected>Seleccione&hellip;</option>
			</select>
			<label for="segmentos">Lista de segmentos</label>
		</div>
	</div>
</div>

<div class="card hide">
	<div class="card-content">
		<h3 class="heading">Lista de administradores</h3>
		<div class="row">
			<div class="input-field col s12 m6">
				<button type="button" class="waves-effect waves-light btn lime darken-2 modal-trigger" data-target="agregar-modal">Agregar Administrador</button>
			</div>
			<div class="col s12 m6"></div>
		</div>
		<table id="tabla" class="table-pink">
			<thead>
				<tr>
					<th>E-mail / Nombre de usuario</th>
					<th>Nombre</th>
					<th>Descripción</th>
					<th>Categoría</th>
					<th>Estado</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>
</div>
{% endblock %}

{% block modals %}
<form id="agregar-modal" class="modal modal-fixed-footer">
	<input type="hidden" id="agregar-hidden" name="cadena">
	<input type="hidden" id="agregar-segmento-hidden" name="segmento">
	<div class="modal-content">
		<h4>Agregar Administrador</h4>
		<div class="row">
			<div class="input-field col s12 m6">
				<input type="text" id="username" class="validate" name="username" placeholder="E-mail / Nombre de usuario" required>
				<label for="username">E-mail / Nombre de usuario</label>
			</div>
			<div class="input-field col s12 m6">
				<input type="text" id="nombre" class="validate" name="nombre" placeholder="Nombre y Apellido" required>
				<label for="nombre">Nombre</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12 m6">
				<input type="text" id="descripcion" class="validate" name="descripcion" placeholder="Descripción del usuario" required>
				<label for="descripcion">Descripción</label>
			</div>
			<div class="input-field col s6 m6">
				<select class="validate" name="categoria_id" id="categoria-id">
                    <!--<option value="">Seleccione una categoría</option>-->
                    {% for categoria in categorias %}
                        <option value="{{ categoria.id }}">{{ categoria.nombre }}</option>
                    {% endfor %}
				</select>
				<label for="categoria-id">Categoría</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12 m6">
				<input type="password" id="pass" class="validate" name="pass" placeholder="Contraseña" pattern=".{6,}" title="Ingrese al menos seis caracteres" required>
				<label for="pass">Contraseña</label>
			</div>
			<div class="input-field col s12 m6">
				<input type="password" id="re-pass" class="validate" placeholder="Re-ingrese Contraseña" pattern=".{6,}" title="Ingrese al menos seis caracteres" required>
				<label for="re-pass">Re-ingrese Contraseña</label>
			</div>
		</div>
	</div>
		<div class="modal-footer">
		<button type="button" class="modal-action modal-close waves-effect waves-red btn-flat">Cancelar</button>
		<button type="submit" class="waves-effect waves-green btn-flat">Agregar</button>
	</div>
</form>

<form id="restablecer-modal" class="modal">
	<input type="hidden" id="restablecer-hidden" name="id">
	<div class="modal-content">
		<p>¿Está seguro que desea restablecer la contraseña del usuario?</p>
	</div>
	<div class="modal-footer">
		<button type="button" class="modal-action modal-close waves-effect waves-red btn-flat">Cancelar</button>
		<button type="submit" class="waves-effect waves-green btn-flat">Restablecer</button>
	</div>
</form>
{% endblock %}

{% block js %}
<script src="/js/admins.js"></script>
{% endblock %}
