{% set titulo = 'Configurar Bodegas' %}

{% extends 'plantilla.njk' %}

{% block content %}
<div class="card">
	<div class="card-content">
		<h3 class="heading">Lista de bodegas</h3>
		<div class="row">
			<div class="input-field col s12 m6">
				<button type="button" id="agregar-bodega" class="waves-effect waves-light btn lime darken-2">Agregar Bodega</button>
			</div>
			<div class="col s12 m6"></div>
		</div>
		<table id="tabla" class="table-pink">
			<thead>
				<tr>
					<th>Id Siigo</th>
					<th>Nombre</th>
					<th>Comprobante</th>
					<th>Id Documento</th>
					<th>E-Mail</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>
</div>
{% endblock %}

{% block modals %}
<form id="agregar-modal" class="modal modal-fixed-footer">
	<div class="modal-content">
		<h4><span class="ae"></span> Bodega</h4>
		<div class="row">
			<div class="input-field col s12 m6">
				<input type="number" id="id-siigo" class="validate" name="id" placeholder="Id" required>
				<label for="id-siigo">Id Siigo</label>
			</div>
			<div class="input-field col s12 m6">
				<input type="text" id="nombre" class="validate" name="nombre" placeholder="Nombre de Bodega" required>
				<label for="nombre">Nombre</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12 m6">
				<input type="number" id="comprobante" class="validate" name="comprobante" placeholder="Comprobante" required>
				<label for="comprobante">Comprobante</label>
			</div>
			<div class="input-field col s12 m6">
				<input type="number" id="id-doc" class="validate" name="doc_id" placeholder="Id" required>
				<label for="id-doc">Id Documento</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12 m6">
				<input type="email" id="email" class="validate" name="email" placeholder="E-Mail">
				<label for="email">E-Mail</label>
			</div>
			<div class="input-field col s12 m6"></div>
		</div>
	</div>
		<div class="modal-footer">
		<button type="button" class="modal-action modal-close waves-effect waves-red btn-flat">Cancelar</button>
		<button type="submit" class="waves-effect waves-green btn-flat ae"></button>
	</div>
</form>
{% endblock %}

{% block js %}
<script src="/js/bodegas.js"></script>
{% endblock %}
