{% set titulo = 'Usuario' %}

{% extends '../plantilla.njk' %}

{% block content %}
	<div class="card">
		<div class="card-content">
			<h3 class="heading">Lista de usuarios</h3>
			<div class="row">
				<div class="input-field col s12 m6">
					<button type="button" id="agregar-usuario" class="waves-effect waves-light btn lime darken-2">
                        Agregar Usuario
                    </button>
				</div>
				<div class="col s12 m6"></div>
			</div>
			<table id="tabla" class="table-pink">
				<thead>
				<tr>
					<th>Usuario</th>
					<th>Nombre</th>
					<th>Email</th>
					<th>Rol</th>
					<th>Estado</th>
					<th></th>
				</tr>
				</thead>
			</table>
		</div>
	</div>
{% endblock %}

{% block js %}
	<script src="/js/usuarios.js"></script>
{% endblock %}
